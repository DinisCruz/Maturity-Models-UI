div(ng-controller='ObservedController')

    projectMenu
    .row
        .medium-12
            h4 Observed (details) activities for project: {{project}}

    .row.fullWidth
        .medium-12.columns
            table.fullWidth.observed-table
                tr.observed-domain(ng-class="'observed-column-' + data.index")
                    td(colspan='4') {{data.title}}
                tr.observed-title
                    td Activity
                    td Level
                    td Question
                    td Observed
                    td.text-center Yes
                    td.text-center No
                    td.text-center.hide-for-print Maybe
                    td.text-center.hide-for-print NA
                tr(ng-repeat='(domain, data) in ::observed_By_Id')

                    //tr(ng-repeat="data in domain_Data.activities", id='{{data.title}}' ng-show='data.title')
                    td {{data.title}}
                    td.text-center {{data.level}}
                    td {{data.name}}
                    td.text-center(ng-class="'observed-size-' + data.observed ") {{data.observed}}
                    // show without link (print friendly)
                    td.show-for-print
                        span(ng-repeat="team in data.Yes") {{team}}&#32;
                    td.show-for-print
                        span(ng-repeat="team in data.No") {{team}}&#32;
                    // show with link (normal page)
                    td.hide-for-print
                        a(ng-repeat="team in data.Yes" href="/view/{{project}}/{{team}}/table" target='_blank') {{team}}
                            span &#32;
                    td.hide-for-print
                        a(ng-repeat="team in data.No" href="/view/{{project}}/{{team}}/table" target='_blank') {{team}}
                            span &#32;
                    td.hide-for-print
                        a(ng-repeat="team in data.Maybe" href="/view/{{project}}/{{team}}/table" target='_blank') {{team}}
                            span &#32;
                    td.hide-for-print
                        a(ng-repeat="team in data.NA" href="/view/{{project}}/{{team}}/table" target='_blank') {{team}}
                            span &#32;




        //.medium-3.columns(ng-repeat='(domain, data) in domains')
            table.fullWidth.observed-table
                tr.observed-domain(ng-class="'observed-column-' + data.index")
                    td(colspan='4') {{data.title}}
                tr.observed-title
                    td Activity
                    td Level
                    td Question
                    td Observed
                tr.activity(ng-repeat="activity in data.activities", id='{{activity}}')
                    td.text-left {{activity}}
                    td
                        span {{project_Activities[activity].level }}
                    td
                        span {{project_Activities[activity].name }}
                    td
                        span {{project_Activities[activity].activities['Yes'].length }}